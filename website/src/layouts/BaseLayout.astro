---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "A global protocol for strengthening human agency in AI-native systems, without sharing content." } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
</head>
<body>
    <nav>
        <div class="container">
            <a href="/" class="logo">Human Agency Protocol (Draft)</a>
            <button class="burger" id="burger-menu" aria-label="Toggle menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <ul id="nav-menu">
                <li><a href="/protocol" class={currentPath.startsWith('/protocol') ? 'active' : ''}>Protocol</a></li>
                <li><a href="/service" class={currentPath.startsWith('/service') ? 'active' : ''}>Service Providers</a></li>
                <li><a href="/governance" class={currentPath.startsWith('/governance') ? 'active' : ''}>Governance</a></li>
            </ul>
        </div>
    </nav>

    <slot />

    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h4>Protocol</h4>
                <ul>
                    <li><a href="/protocol">Overview</a></li>
                    <li><a href="/protocol#inquiry-ladder">Inquiry Ladder</a></li>
                    <li><a href="/protocol#blueprints">Blueprints</a></li>
                    <li><a href="/protocol#signals">Signal Guides</a></li>
                </ul>
            </div>

            <div class="footer-section">
                <h4>Service Providers</h4>
                <ul>
                    <li><a href="/service">Overview</a></li>
                    <li><a href="/service#architecture">Architecture</a></li>
                    <li><a href="/service#privacy">Privacy Model</a></li>
                    <li><a href="/service#registry">Registry</a></li>
                </ul>
            </div>

            <div class="footer-section">
                <h4>Community</h4>
                <ul>
                    <li><a href="/governance">Governance</a></li>
                    <li><a href="https://github.com/schadauer/human-agency-protocol">GitHub</a></li>
                </ul>
            </div>
        </div>

        <div class="footer-bottom">
            <p><a href="/impress">Impress</a> | The Human Agency Protocol is open infrastructure. Licensed under MIT. Maintained by stewards, not owners.</p>
        </div>
    </footer>
</body>
</html>

<style>
    footer {
        max-width: 1200px;
        margin: 8rem auto 0;
        padding: 4rem 2rem;
        border-top: 1px solid var(--border);
    }

    .footer-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 3rem;
    }

    .footer-section h4 {
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--text-primary);
    }

    .footer-section ul {
        list-style: none;
        margin: 0;
    }

    .footer-section ul li {
        margin-bottom: 0.75rem;
    }

    .footer-section a {
        color: var(--text-secondary);
        text-decoration: none;
        font-size: 0.95rem;
        transition: color 0.2s;
    }

    .footer-section a:hover {
        color: var(--accent);
    }

    .footer-bottom {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border);
        color: var(--text-tertiary);
        font-size: 0.9rem;
    }

    @media (max-width: 768px) {
        footer {
            margin-top: 4rem;
        }
    }
</style>

<script>
    // Burger menu toggle
    const burger = document.getElementById('burger-menu');
    const navMenu = document.getElementById('nav-menu');

    burger?.addEventListener('click', () => {
        burger.classList.toggle('active');
        navMenu?.classList.toggle('active');
    });

    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
        if (!burger?.contains(e.target as Node) && !navMenu?.contains(e.target as Node)) {
            burger?.classList.remove('active');
            navMenu?.classList.remove('active');
        }
    });

    // Close menu when clicking a link
    navMenu?.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
            burger?.classList.remove('active');
            navMenu?.classList.remove('active');
        });
    });
</script>
